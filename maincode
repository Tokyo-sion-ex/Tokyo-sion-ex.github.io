        // テーマ切り替え関数
        function toggleTheme() {
            isDarkMode = !isDarkMode;
            
            if (isDarkMode) {
                document.body.classList.remove('light-mode');
                localStorage.setItem('youtubeTheme', 'dark');
            } else {
                document.body.classList.add('light-mode');
                localStorage.setItem('youtubeTheme', 'light');
            }
        }

        // 動画IDをURLから抽出する関数
        function extractVideoId(url) {
            if (!url || url.trim() === '') {
                return null;
            }
            
            url = url.trim();
            
            const patterns = [
                /(?:youtube\.com\/watch\?v=|youtu\.be\/|youtube\.com\/embed\/|youtube\.com\/v\/|youtube\.com\/watch\?.*v=)([a-zA-Z0-9_-]{11})/,
                /^([a-zA-Z0-9_-]{11})$/
            ];
            
            for (const pattern of patterns) {
                const match = url.match(pattern);
                if (match && match[1]) {
                    return match[1];
                }
            }
            
            const shortsPattern = /youtube\.com\/shorts\/([a-zA-Z0-9_-]{11})/;
            const shortsMatch = url.match(shortsPattern);
            if (shortsMatch && shortsMatch[1]) {
                return shortsMatch[1];
            }
            
            return null;
        }

        // YouTube APIを使用して動画情報を取得
        async function fetchVideoInfo(videoId) {
            if (videoCache[videoId]) {
                return videoCache[videoId];
            }
            
            try {
                const response = await fetch(
                    `https://www.googleapis.com/youtube/v3/videos?part=snippet,contentDetails,statistics&id=${videoId}&key=${YOUTUBE_API_KEY}`
                );
                
                if (!response.ok) {
                    throw new Error('APIリクエストに失敗しました');
                }
                
                const data = await response.json();
                
                if (!data.items || data.items.length === 0) {
                    throw new Error('動画が見つかりませんでした');
                }
                
                const videoData = data.items[0];
                const snippet = videoData.snippet;
                const stats = videoData.statistics;
                const contentDetails = videoData.contentDetails;
                
                const duration = formatDuration(contentDetails.duration);
                const views = formatNumber(stats.viewCount);
                const likes = formatNumber(stats.likeCount);
                
                const date = new Date(snippet.publishedAt).toLocaleDateString('ja-JP', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                });
                
                let subscribers = "登録者数不明";
                try {
                    const channelResponse = await fetch(
                        `https://www.googleapis.com/youtube/v3/channels?part=statistics&id=${snippet.channelId}&key=${YOUTUBE_API_KEY}`
                    );
                    
                    if (channelResponse.ok) {
                        const channelData = await channelResponse.json();
                        if (channelData.items && channelData.items.length > 0) {
                            const subCount = parseInt(channelData.items[0].statistics.subscriberCount);
                            subscribers = `登録者 ${formatNumber(subCount)}人`;
                        }
                    }
                } catch (e) {
                    console.log("チャンネル情報の取得に失敗:", e);
                }
                
                const videoInfo = {
                    id: videoId,
                    title: snippet.title,
                    channel: snippet.channelTitle,
                    views: `${views}回視聴`,
                    date: date,
                    duration: duration,
                    description: snippet.description || "説明はありません",
                    likes: formatNumber(likes),
                    dislikes: "非表示",
                    subscribers: subscribers,
                    thumbnail: `https://img.youtube.com/vi/${videoId}/hqdefault.jpg`
                };
                
                videoCache[videoId] = videoInfo;
                
                return videoInfo;
                
            } catch (error) {
                console.error('動画情報の取得に失敗:', error);
                
                const fallbackInfo = {
                    id: videoId,
                    title: `YouTube動画 (ID: ${videoId})`,
                    channel: "YouTube",
                    views: "視聴回数不明",
                    date: "日付不明",
                    duration: "--:--",
                    description: "動画情報を取得できませんでした。YouTube APIの制限に達した可能性があります。",
                    likes: "不明",
                    dislikes: "不明",
                    subscribers: "登録者数不明",
                    thumbnail: `https://img.youtube.com/vi/${videoId}/hqdefault.jpg`
                };
                
                videoCache[videoId] = fallbackInfo;
                
                return fallbackInfo;
            }
        }

        // 数値をフォーマットする関数
        function formatNumber(num) {
            if (!num) return "0";
            
            if (typeof num === 'string') {
                num = parseInt(num);
            }
            
            if (num >= 100000000) {
                return (num / 100000000).toFixed(1).replace('.0', '') + '億';
            } else if (num >= 10000) {
                return (num / 10000).toFixed(1).replace('.0', '') + '万';
            } else if (num >= 1000) {
                return (num / 1000).toFixed(1).replace('.0', '') + '千';
            }
            
            return num.toLocaleString();
        }

        // ISO 8601期間をフォーマットする関数
        function formatDuration(duration) {
            if (!duration) return "--:--";
            
            const match = duration.match(/PT(\d+H)?(\d+M)?(\d+S)?/);
            if (!match) return "--:--";
            
            const hours = (match[1] || '').replace('H', '');
            const minutes = (match[2] || '').replace('M', '');
            const seconds = (match[3] || '').replace('S', '');
            
            let result = '';
            
            if (hours) {
                result += hours + ':';
                result += minutes.padStart(2, '0') + ':';
                result += seconds.padStart(2, '0');
            } else if (minutes) {
                result += minutes + ':';
                result += seconds.padStart(2, '0');
            } else {
                result = '0:' + seconds.padStart(2, '0');
            }
            
            return result;
        }

        // 通知を表示する関数
        function showNotification(message, type = 'info') {
            const existingNotifications = document.querySelectorAll('.notification');
            existingNotifications.forEach(notification => {
                notification.remove();
            });
            
            const notification = document.createElement('div');
            notification.className = `notification ${type}`;
            notification.textContent = message;
            notification.style.cssText = 'position:fixed; top:80px; right:20px; padding:12px 20px; border-radius:8px; z-index:10000; font-weight:500; animation:slideIn 0.3s ease; max-width:300px;';
            
            document.body.appendChild(notification);
            
            setTimeout(() => {
                if (notification.parentNode) {
                    notification.remove();
                }
            }, 5000);
        }

        // 共有機能関連の関数
        // 動画リンクを生成
        function getVideoUrl(videoId) {
            return `https://www.youtube.com/watch?v=${videoId}`;
        }

        // 短縮URLを生成
        function getShortVideoUrl(videoId) {
            return `https://youtu.be/${videoId}`;
        }

        // 埋め込みコードを生成
        function getEmbedCode(videoId, width = 560, height = 315) {
            return `<iframe width="${width}" height="${height}" src="https://www.youtube.com/embed/${videoId}" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>`;
        }

        // 共有モーダルを開く
        function openShareModal() {
            const videoUrl = getVideoUrl(currentVideoId);
            const shortUrl = getShortVideoUrl(currentVideoId);
            
            // リンク入力フィールドを更新
            copyLinkInput.value = videoUrl;
            
            // 埋め込みコードを更新
            embedCode.textContent = getEmbedCode(currentVideoId);
            
            // 埋め込みコード部分を非表示
            embedCodeContainer.classList.remove('active');
            
            // コピーボタンの状態をリセット
            resetCopyButton();
            resetEmbedCopyButton();
            
            // モーダルを表示
            shareModal.classList.add('active');
            
            // フォーカスをコピー入力フィールドに
            setTimeout(() => {
                copyLinkInput.focus();
                copyLinkInput.select();
            }, 100);
        }

        // 共有モーダルを閉じる
        function closeShareModalFunc() {
            shareModal.classList.remove('active');
        }

        // リンクをコピー
        async function copyToClipboard(text, type = 'link') {
            try {
                await navigator.clipboard.writeText(text);
                
                if (type === 'link') {
                    // コピーボタンの見た目を変更
                    copyButtonText.textContent = 'コピー済み';
                    copyButtonIcon.className = 'fas fa-check';
                    copyLinkButton.classList.add('copied');
                    
                    // 3秒後に元に戻す
                    setTimeout(() => {
                        resetCopyButton();
                    }, 3000);
                } else if (type === 'embed') {
                    // 埋め込みコードコピーボタンの見た目を変更
                    copyEmbedButtonText.textContent = 'コピー済み';
                    copyEmbedButtonIcon.className = 'fas fa-check';
                    copyEmbedButton.classList.add('copied');
                    
                    // 3秒後に元に戻す
                    setTimeout(() => {
                        resetEmbedCopyButton();
                    }, 3000);
                }
                
                // 成功メッセージを表示
                showShareSuccess();
                return true;
            } catch (err) {
                console.error('クリップボードへのコピーに失敗しました:', err);
                
                // フォールバック方法
                const textArea = document.createElement('textarea');
                textArea.value = text;
                document.body.appendChild(textArea);
                textArea.focus();
                textArea.select();
                
                try {
                    const successful = document.execCommand('copy');
                    if (successful) {
                        if (type === 'link') {
                            copyButtonText.textContent = 'コピー済み';
                            copyButtonIcon.className = 'fas fa-check';
                            copyLinkButton.classList.add('copied');
                            
                            setTimeout(() => {
                                resetCopyButton();
                            }, 3000);
                        } else if (type === 'embed') {
                            copyEmbedButtonText.textContent = 'コピー済み';
                            copyEmbedButtonIcon.className = 'fas fa-check';
                            copyEmbedButton.classList.add('copied');
                            
                            setTimeout(() => {
                                resetEmbedCopyButton();
                            }, 3000);
                        }
                        
                        showShareSuccess();
                        return true;
                    }
                } catch (err2) {
                    console.error('フォールバックコピーにも失敗しました:', err2);
                }
                
                document.body.removeChild(textArea);
                showNotification('クリップボードへのコピーに失敗しました', 'error');
                return false;
            }
        }

        // コピーボタンをリセット
        function resetCopyButton() {
            copyButtonText.textContent = 'コピー';
            copyButtonIcon.className = 'fas fa-copy';
            copyLinkButton.classList.remove('copied');
        }

        // 埋め込みコードコピーボタンをリセット
        function resetEmbedCopyButton() {
            copyEmbedButtonText.textContent = 'コードをコピー';
            copyEmbedButtonIcon.className = 'fas fa-copy';
            copyEmbedButton.classList.remove('copied');
        }

        // 共有成功メッセージを表示
        function showShareSuccess() {
            shareSuccessMessage.style.display = 'block';
            setTimeout(() => {
                shareSuccessMessage.style.display = 'none';
            }, 2000);
        }

        // Facebookで共有
        function shareOnFacebook() {
            const url = encodeURIComponent(getVideoUrl(currentVideoId));
            const shareUrl = `https://www.facebook.com/sharer/sharer.php?u=${url}`;
            window.open(shareUrl, '_blank', 'width=600,height=400');
        }

        // Twitterで共有
        function shareOnTwitter() {
            const url = encodeURIComponent(getVideoUrl(currentVideoId));
            const video = videoCache[currentVideoId];
            const text = video ? encodeURIComponent(`「${video.title}」を見ました`) : encodeURIComponent('YouTube動画');
            const shareUrl = `https://twitter.com/intent/tweet?url=${url}&text=${text}`;
            window.open(shareUrl, '_blank', 'width=600,height=400');
        }

        // ホーム画面の動画グリッドを表示
        function renderVideoGrid() {
            videoGrid.innerHTML = '';
            
            // すべての動画を集める
            const allVideos = [];
            
            // プレイリストから動画を追加
            Object.values(playlists).forEach(playlist => {
                playlist.forEach(video => {
                    if (!allVideos.some(v => v.id === video.id)) {
                        allVideos.push(video);
                    }
                });
            });
            
            // 保存済み動画を追加
            savedVideos.forEach(video => {
                if (!allVideos.some(v => v.id === video.id)) {
                    allVideos.push(video);
                }
            });
            
            // 高評価動画を追加
            likedVideos.forEach(video => {
                if (!allVideos.some(v => v.id === video.id)) {
                    allVideos.push(video);
                }
            });
            
            // キャッシュから動画を追加
            Object.values(videoCache).forEach(video => {
                if (!allVideos.some(v => v.id === video.id)) {
                    allVideos.push(video);
                }
            });
            
            // サンプル動画を追加
            sampleVideos.forEach(sampleVideo => {
                if (!allVideos.some(v => v.id === sampleVideo.id)) {
                    allVideos.push(sampleVideo);
                }
            });
            
            // 最大12個の動画を表示
            const videosToShow = allVideos.slice(0, 12);
            
            if (videosToShow.length === 0) {
                videoGrid.innerHTML = `
                    <div style="grid-column:1/-1; text-align:center; padding:60px 20px; color:var(--yt-spec-text-secondary);">
                        <i class="fas fa-video" style="font-size:48px; margin-bottom:16px; display:block; color:var(--yt-spec-text-disabled);"></i>
                        <p>動画がありません</p>
                        <p style="font-size:12px; margin-top:8px;">プレイリストに動画を追加してください</p>
                    </div>
                `;
                return;
            }
            
            videosToShow.forEach(video => {
                const videoElement = document.createElement('div');
                videoElement.className = 'video-container';
                videoElement.setAttribute('data-id', video.id);
                
                videoElement.innerHTML = `
                    <div class="thumbnail-container">
                        <img src="${video.thumbnail}" 
                             alt="${video.title}" class="thumbnail"
                             onerror="this.src='https://via.placeholder.com/320x180/333/fff?text=Thumbnail+Error'">
                        <div class="duration">${video.duration}</div>
                    </div>
                    <div class="video-info">
                        <div class="channel-avatar-small"></div>
                        <div class="video-details">
                            <div class="video-title">${video.title}</div>
                            <span class="channel-name-small">${video.channel}</span>
                            <div class="video-meta">
                                <span>${video.views}</span>
                                <span class="dot-separator">•</span>
                                <span>${video.date}</span>
                            </div>
                        </div>
                    </div>
                `;
                
                videoElement.addEventListener('click', () => {
                    playVideo(video.id);
                });
                
                videoGrid.appendChild(videoElement);
            });
        }

        // 関連動画を表示
        function renderRelatedVideos() {
            relatedVideos.innerHTML = '';
            
            // 現在の動画を除いたすべての動画から関連動画を選択
            const allVideos = [];
            
            // プレイリストから動画を追加
            Object.values(playlists).forEach(playlist => {
                playlist.forEach(video => {
                    if (!allVideos.some(v => v.id === video.id) && video.id !== currentVideoId) {
                        allVideos.push(video);
                    }
                });
            });
            
            // 保存済み動画を追加
            savedVideos.forEach(video => {
                if (!allVideos.some(v => v.id === video.id) && video.id !== currentVideoId) {
                    allVideos.push(video);
                }
            });
            
            // 高評価動画を追加
            likedVideos.forEach(video => {
                if (!allVideos.some(v => v.id === video.id) && video.id !== currentVideoId) {
                    allVideos.push(video);
                }
            });
            
            // キャッシュから動画を追加
            Object.values(videoCache).forEach(video => {
                if (!allVideos.some(v => v.id === video.id) && video.id !== currentVideoId) {
                    allVideos.push(video);
                }
            });
            
            // サンプル動画を追加
            sampleVideos.forEach(sampleVideo => {
                if (!allVideos.some(v => v.id === sampleVideo.id) && sampleVideo.id !== currentVideoId) {
                    allVideos.push(sampleVideo);
                }
            });
            
            // 最大5個の関連動画を表示
            const relatedVideosToShow = allVideos.slice(0, 5);
            
            if (relatedVideosToShow.length === 0) {
                relatedVideos.innerHTML = `
                    <div style="text-align:center; padding:20px; color:var(--yt-spec-text-secondary);">
                        <i class="fas fa-video" style="font-size:24px; margin-bottom:8px; display:block; color:var(--yt-spec-text-disabled);"></i>
                        <p style="font-size:12px;">関連動画はありません</p>
                    </div>
                `;
                return;
            }
            
            relatedVideosToShow.forEach(video => {
                const relatedVideoElement = document.createElement('div');
                relatedVideoElement.className = 'related-video';
                relatedVideoElement.setAttribute('data-id', video.id);
                
                relatedVideoElement.innerHTML = `
                    <div class="related-thumbnail">
                        <img src="${video.thumbnail}" 
                             alt="${video.title}"
                             onerror="this.src='https://via.placeholder.com/168x94/333/fff?text=Thumbnail+Error'">
                    </div>
                    <div class="related-info">
                        <div class="related-title">${video.title}</div>
                        <div class="related-channel">${video.channel}</div>
                        <div class="related-meta">
                            <span>${video.views}</span>
                            <span> • </span>
                            <span>${video.date}</span>
                        </div>
                    </div>
                `;
                
                relatedVideoElement.addEventListener('click', () => {
                    playVideo(video.id);
                });
                
                relatedVideos.appendChild(relatedVideoElement);
            });
        }

        // 保存済み動画一覧を表示
        function renderSavedVideos() {
            savedVideosList.innerHTML = '';
            
            if (savedVideos.length === 0) {
                savedVideosList.innerHTML = `
                    <div class="saved-videos-empty">
                        <i class="fas fa-bookmark"></i>
                        <p>保存済み動画はありません</p>
                        <p style="font-size: 11px; margin-top: 8px;">動画を保存するとここに表示されます</p>
                    </div>
                `;
                return;
            }
            
            // 保存日時でソート（新しいものから）
            const sortedVideos = [...savedVideos].sort((a, b) => {
                const dateA = a.savedAt ? new Date(a.savedAt) : new Date(0);
                const dateB = b.savedAt ? new Date(b.savedAt) : new Date(0);
                return dateB - dateA;
            });
            
            sortedVideos.forEach((video, index) => {
                const savedVideoItem = document.createElement('div');
                savedVideoItem.className = `saved-video-item ${video.id === currentVideoId ? 'active' : ''}`;
                savedVideoItem.setAttribute('data-id', video.id);
                savedVideoItem.setAttribute('data-index', index);
                
                // 保存日時をフォーマット
                let savedDateText = '';
                if (video.savedAt) {
                    const savedDate = new Date(video.savedAt);
                    const now = new Date();
                    const diffTime = Math.abs(now - savedDate);
                    const diffDays = Math.floor(diffTime / (1000 * 60 * 60 * 24));
                    
                    if (diffDays === 0) {
                        savedDateText = '今日保存';
                    } else if (diffDays === 1) {
                        savedDateText = '昨日保存';
                    } else if (diffDays < 7) {
                        savedDateText = `${diffDays}日前`;
                    } else {
                        savedDateText = savedDate.toLocaleDateString('ja-JP', {
                            month: 'short',
                            day: 'numeric'
                        });
                    }
                }
                
                savedVideoItem.innerHTML = `
                    <div class="saved-video-thumbnail">
                        <img src="${video.thumbnail}" 
                             alt="${video.title}"
                             onerror="this.src='https://via.placeholder.com/100x56/333/fff?text=Thumbnail+Error'">
                    </div>
                    <div class="saved-video-info">
                        <div class="saved-video-title">${video.title}</div>
                        <div class="saved-video-meta">
                            <span>${video.channel}</span>
                            ${savedDateText ? `<span> • ${savedDateText}</span>` : ''}
                        </div>
                    </div>
                    <button class="remove-saved-video" data-index="${index}">
                        <i class="fas fa-times"></i>
                    </button>
                `;
                
                // クリックで再生
                savedVideoItem.addEventListener('click', (e) => {
                    if (!e.target.closest('.remove-saved-video')) {
                        playVideo(video.id);
                    }
                });
                
                // 削除ボタン
                const removeBtn = savedVideoItem.querySelector('.remove-saved-video');
                removeBtn.addEventListener('click', (e) => {
                    e.stopPropagation();
                    removeFromSavedVideos(index);
                });
                
                savedVideosList.appendChild(savedVideoItem);
            });
        }

        // 動画を再生
        async function playVideo(videoId) {
            let video = videoCache[videoId];
            
            // キャッシュにない場合は情報を取得
            if (!video) {
                try {
                    showNotification('動画情報を取得中...', 'info');
                    video = await fetchVideoInfo(videoId);
                } catch (error) {
                    showNotification('動画情報の取得に失敗しました', 'error');
                    return;
                }
            }
            
            currentVideoId = videoId;
            localStorage.setItem('youtubeCurrentVideoId', currentVideoId);
            
            // プレイヤーを更新
            mainVideoPlayer.src = `https://www.youtube.com/embed/${videoId}?autoplay=1`;
            playerVideoTitle.textContent = video.title;
            playerVideoViews.textContent = video.views;
            playerVideoDate.textContent = video.date;
            playerLikeCount.textContent = video.likes;
            playerChannelName.textContent = video.channel;
            playerChannelSubs.textContent = video.subscribers;
            playerVideoDescription.textContent = video.description;
            
            // 詳細表示をリセット
            const fullDescription = video.description;
            const shortDescription = fullDescription.split('\n')[0];
            const displayDescription = shortDescription.length > 100 ? shortDescription.substring(0, 100) + '...' : shortDescription;
            playerVideoDescription.textContent = displayDescription;
            showMoreDescription.textContent = fullDescription.length > 100 ? 'さらに表示' : '';
            
            // ボタンの状態を更新
            updateLikeButton();
            updateSaveButton();
            
            // 関連動画を更新
            renderRelatedVideos();
            
            // 現在のプレイリストを更新
            renderCurrentPlaylist();
            
            // 保存済み動画一覧を更新
            renderSavedVideos();
            
            // プレイヤー画面を表示
            homeScreen.style.display = 'none';
            playerScreen.classList.add('active');
            
            // プレイリストタブを「現在のプレイリスト」に設定
            playlistTabs.forEach(tab => tab.classList.remove('active'));
            document.querySelector('[data-tab="current"]').classList.add('active');
            
            document.querySelectorAll('.playlist-content').forEach(content => {
                content.classList.remove('active');
            });
            currentPlaylistTab.classList.add('active');
        }

        // 現在のプレイリストを表示
        function renderCurrentPlaylist() {
            const playlist = playlists[currentPlaylist] || [];
            currentPlaylistElement.innerHTML = '';
            
            if (playlist.length === 0) {
                currentPlaylistElement.innerHTML = `
                    <div class="playlist-empty">
                        <i class="fas fa-list"></i>
                        <p>プレイリストが空です</p>
                        <p style="font-size: 12px; margin-top: 8px;">動画を追加してください</p>
                    </div>
                `;
                return;
            }
            
            playlist.forEach((video, index) => {
                const playlistItem = document.createElement('div');
                playlistItem.className = `playlist-item ${video.id === currentVideoId ? 'active' : ''}`;
                playlistItem.setAttribute('data-id', video.id);
                
                playlistItem.innerHTML = `
                    <div class="playlist-item-thumbnail">
                        <img src="${video.thumbnail}" 
                             alt="${video.title}"
                             onerror="this.src='https://via.placeholder.com/120x68/333/fff?text=Thumbnail+Error'">
                    </div>
                    <div class="playlist-item-info">
                        <div class="playlist-item-title">${video.title}</div>
                        <div class="playlist-item-meta">${video.channel} • ${video.duration}</div>
                    </div>
                    <button class="remove-from-playlist" data-index="${index}">
                        <i class="fas fa-times"></i>
                    </button>
                `;
                
                // クリックで再生
                playlistItem.addEventListener('click', (e) => {
                    if (!e.target.closest('.remove-from-playlist')) {
                        playVideo(video.id);
                    }
                });
                
                // 削除ボタン
                const removeBtn = playlistItem.querySelector('.remove-from-playlist');
                removeBtn.addEventListener('click', (e) => {
                    e.stopPropagation();
                    removeFromPlaylist(index);
                });
                
                currentPlaylistElement.appendChild(playlistItem);
            });
        }

        // すべてのプレイリストを表示
        function renderAllPlaylists() {
            allPlaylistsElement.innerHTML = '';
            
            Object.keys(playlists).forEach(playlistName => {
                const playlistItem = document.createElement('div');
                playlistItem.className = `playlist-item ${playlistName === currentPlaylist ? 'active' : ''}`;
                playlistItem.setAttribute('data-name', playlistName);
                
                playlistItem.innerHTML = `
                    <div class="playlist-item-info">
                        <div class="playlist-item-title">${playlistName}</div>
                        <div class="playlist-item-meta">${playlists[playlistName].length}件の動画</div>
                    </div>
                `;
                
                playlistItem.addEventListener('click', () => {
                    switchPlaylist(playlistName);
                });
                
                allPlaylistsElement.appendChild(playlistItem);
            });
        }

        // 高評価した動画を表示
        function renderLikedVideos() {
            likedVideosList.innerHTML = '';
            
            if (likedVideos.length === 0) {
                likedVideosList.innerHTML = `
                    <div class="playlist-empty">
                        <i class="fas fa-thumbs-up"></i>
                        <p>高評価した動画はありません</p>
                        <p style="font-size: 12px; margin-top: 8px;">動画に高評価をしてください</p>
                    </div>
                `;
                return;
            }
            
            likedVideos.forEach(video => {
                const playlistItem = document.createElement('div');
                playlistItem.className = 'playlist-item';
                playlistItem.setAttribute('data-id', video.id);
                
                playlistItem.innerHTML = `
                    <div class="playlist-item-thumbnail">
                        <img src="${video.thumbnail}" 
                             alt="${video.title}"
                             onerror="this.src='https://via.placeholder.com/120x68/333/fff?text=Thumbnail+Error'">
                    </div>
                    <div class="playlist-item-info">
                        <div class="playlist-item-title">${video.title}</div>
                        <div class="playlist-item-meta">${video.channel} • ${video.duration}</div>
                    </div>
                    <button class="remove-from-playlist remove-liked" data-id="${video.id}">
                        <i class="fas fa-times"></i>
                    </button>
                `;
                
                // クリックで再生
                playlistItem.addEventListener('click', (e) => {
                    if (!e.target.closest('.remove-liked')) {
                        playVideo(video.id);
                    }
                });
                
                // 削除ボタン
                const removeBtn = playlistItem.querySelector('.remove-liked');
                removeBtn.addEventListener('click', (e) => {
                    e.stopPropagation();
                    removeFromLikedVideos(video.id);
                });
                
                likedVideosList.appendChild(playlistItem);
            });
        }

        // プレイリストに動画を追加
        async function addToCurrentPlaylist(url) {
            const videoId = extractVideoId(url);
            
            if (!videoId) {
                showNotification('有効なYouTube動画URLを入力してください', 'error');
                return;
            }
            
            // ローディング状態を表示
            addButtonText.textContent = '取得中...';
            addButtonLoading.style.display = 'inline-block';
            addToCurrentPlaylistBtn.disabled = true;
            
            try {
                // 動画情報を取得
                const video = await fetchVideoInfo(videoId);
                
                // 重複チェック
                const currentPlaylistVideos = playlists[currentPlaylist] || [];
                if (currentPlaylistVideos.some(v => v.id === videoId)) {
                    showNotification('この動画は既にプレイリストに追加されています', 'error');
                    return;
                }
                
                // プレイリストに追加
                playlists[currentPlaylist].push(video);
                savePlaylists();
                renderCurrentPlaylist();
                renderAllPlaylists();
                renderVideoGrid();
                renderRelatedVideos();
                
                // 入力フィールドをクリア
                addVideoInput.value = '';
                
                // 追加した動画を再生
                await playVideo(videoId);
                
                showNotification('プレイリストに追加しました！', 'success');
                
            } catch (error) {
                console.error('動画の追加に失敗:', error);
                showNotification('動画の追加に失敗しました: ' + error.message, 'error');
                
            } finally {
                // ローディング状態を解除
                addButtonText.textContent = '追加';
                addButtonLoading.style.display = 'none';
                addToCurrentPlaylistBtn.disabled = false;
            }
        }

        // プレイリストから動画を削除
        function removeFromPlaylist(index) {
            if (confirm('この動画をプレイリストから削除しますか？')) {
                playlists[currentPlaylist].splice(index, 1);
                savePlaylists();
                renderCurrentPlaylist();
                renderAllPlaylists();
                renderVideoGrid();
                renderRelatedVideos();
                showNotification('プレイリストから削除しました', 'info');
            }
        }

        // 高評価した動画から削除
        function removeFromLikedVideos(videoId) {
            if (confirm('高評価を解除しますか？')) {
                likedVideos = likedVideos.filter(v => v.id !== videoId);
                saveLikedVideos();
                renderLikedVideos();
                updateLikeButton();
                showNotification('高評価を解除しました', 'info');
            }
        }

        // 保存済み動画から削除
        function removeFromSavedVideos(index) {
            if (confirm('この動画を保存済みから削除しますか？')) {
                savedVideos.splice(index, 1);
                saveSavedVideos();
                renderSavedVideos();
                updateSaveButton();
                renderVideoGrid();
                renderRelatedVideos();
                showNotification('保存済みから削除しました', 'info');
            }
        }

        // すべての保存済み動画を削除
        function clearAllSavedVideos() {
            if (savedVideos.length === 0) {
                showNotification('保存済み動画がありません', 'info');
                return;
            }
            
            if (confirm(`すべての保存済み動画（${savedVideos.length}件）を削除しますか？この操作は元に戻せません。`)) {
                savedVideos = [];
                saveSavedVideos();
                renderSavedVideos();
                updateSaveButton();
                renderVideoGrid();
                renderRelatedVideos();
                showNotification('すべての保存済み動画を削除しました', 'info');
            }
        }

        // 新しいプレイリストを作成
        function createNewPlaylist() {
            const playlistName = newPlaylistNameInput.value.trim();
            
            if (!playlistName) {
                showNotification('プレイリスト名を入力してください', 'error');
                return;
            }
            
            if (playlists[playlistName]) {
                showNotification('その名前のプレイリストは既に存在します', 'error');
                return;
            }
            
            // 新しいプレイリストを作成
            playlists[playlistName] = [];
            savePlaylists();
            
            // 入力フィールドをクリア
            newPlaylistNameInput.value = '';
            
            // 新しく作成したプレイリストに切り替え
            switchPlaylist(playlistName);
            
            showNotification(`「${playlistName}」プレイリストを作成しました`, 'success');
        }

        // プレイリストを切り替え
        function switchPlaylist(playlistName) {
            currentPlaylist = playlistName;
            localStorage.setItem('youtubeCurrentPlaylist', currentPlaylist);
            
            // すべてのプレイリスト表示を更新
            renderAllPlaylists();
            
            // 現在のプレイリストタブに切り替え
            playlistTabs.forEach(tab => tab.classList.remove('active'));
            document.querySelector('[data-tab="current"]').classList.add('active');
            
            document.querySelectorAll('.playlist-content').forEach(content => {
                content.classList.remove('active');
            });
            currentPlaylistTab.classList.add('active');
            
            // 現在のプレイリストを表示
            renderCurrentPlaylist();
        }

        // 高評価ボタンの状態を更新
        function updateLikeButton() {
            const isLiked = likedVideos.some(v => v.id === currentVideoId);
            
            if (isLiked) {
                playerLikeButton.classList.add('liked');
            } else {
                playerLikeButton.classList.remove('liked');
            }
        }

        // 保存ボタンの状態を更新
        function updateSaveButton() {
            const isSaved = savedVideos.some(v => v.id === currentVideoId);
            
            if (isSaved) {
                playerSaveButton.classList.add('saved');
                playerSaveText.textContent = '保存済み';
            } else {
                playerSaveButton.classList.remove('saved');
                playerSaveText.textContent = '保存';
            }
        }

        // 高評価を切り替え
        async function toggleLike() {
            let video = videoCache[currentVideoId];
            
            // キャッシュにない場合は情報を取得
            if (!video) {
                try {
                    video = await fetchVideoInfo(currentVideoId);
                } catch (error) {
                    showNotification('動画情報の取得に失敗しました', 'error');
                    return;
                }
            }
            
            const videoIndex = likedVideos.findIndex(v => v.id === currentVideoId);
            
            if (videoIndex === -1) {
                // 高評価に追加
                likedVideos.push(video);
                playerLikeButton.classList.add('liked');
                
                showNotification('動画を高評価しました', 'success');
            } else {
                // 高評価から削除
                likedVideos.splice(videoIndex, 1);
                playerLikeButton.classList.remove('liked');
                
                showNotification('高評価を解除しました', 'info');
            }
            
            saveLikedVideos();
            renderLikedVideos();
            renderVideoGrid();
            renderRelatedVideos();
        }

        // 動画を保存/保存解除
        async function toggleSave() {
            let video = videoCache[currentVideoId];
            
            // キャッシュにない場合は情報を取得
            if (!video) {
                try {
                    video = await fetchVideoInfo(currentVideoId);
                } catch (error) {
                    showNotification('動画情報の取得に失敗しました', 'error');
                    return;
                }
            }
            
            const videoIndex = savedVideos.findIndex(v => v.id === currentVideoId);
            
            if (videoIndex === -1) {
                // 保存に追加（保存日時を追加）
                const videoToSave = { ...video };
                videoToSave.savedAt = new Date().toISOString();
                savedVideos.push(videoToSave);
                playerSaveButton.classList.add('saved');
                playerSaveText.textContent = '保存済み';
                
                showNotification('動画を保存しました', 'success');
            } else {
                // 保存から削除
                savedVideos.splice(videoIndex, 1);
                playerSaveButton.classList.remove('saved');
                playerSaveText.textContent = '保存';
                
                showNotification('保存を解除しました', 'info');
            }
            
            saveSavedVideos();
            renderSavedVideos();
            renderVideoGrid();
            renderRelatedVideos();
        }

        // 登録ボタンを切り替え
        function toggleSubscribe() {
            if (subscribeButton.textContent === '登録する') {
                subscribeButton.textContent = '登録中';
                subscribeButton.classList.add('subscribed');
                
                // 登録者数を増やす（見た目だけ）
                const currentSubs = playerChannelSubs.textContent;
                const newSubs = currentSubs.replace(/(\d+)/, (match) => {
                    return (parseInt(match.replace(/[^\d]/g, '')) + 1).toLocaleString();
                });
                playerChannelSubs.textContent = newSubs;
                
                showNotification('チャンネルを登録しました', 'success');
            } else {
                subscribeButton.textContent = '登録する';
                subscribeButton.classList.remove('subscribed');
                
                // 登録者数を減らす（見た目だけ）
                const currentSubs = playerChannelSubs.textContent;
                const newSubs = currentSubs.replace(/(\d+)/, (match) => {
                    return (parseInt(match.replace(/[^\d]/g, '')) - 1).toLocaleString();
                });
                playerChannelSubs.textContent = newSubs;
                
                showNotification('チャンネルの登録を解除しました', 'info');
            }
        }

        // ローカルストレージに保存
        function savePlaylists() {
            localStorage.setItem('youtubePlaylists', JSON.stringify(playlists));
        }
        
        function saveLikedVideos() {
            localStorage.setItem('youtubeLikedVideos', JSON.stringify(likedVideos));
        }
        
        function saveSavedVideos() {
            localStorage.setItem('youtubeSavedVideos', JSON.stringify(savedVideos));
        }

        // イベントリスナーの設定
        document.addEventListener('DOMContentLoaded', () => {
            renderVideoGrid();
            renderRelatedVideos();
            renderCurrentPlaylist();
            renderAllPlaylists();
            renderLikedVideos();
            renderSavedVideos();
            updateLikeButton();
            updateSaveButton();
            
            // テーマ切り替え
            themeToggle.addEventListener('click', toggleTheme);
            
            // ホームに戻る
            goHome.addEventListener('click', (e) => {
                e.preventDefault();
                homeScreen.style.display = 'block';
                playerScreen.classList.remove('active');
            });
            
            homeLink.addEventListener('click', (e) => {
                e.preventDefault();
                homeScreen.style.display = 'block';
                playerScreen.classList.remove('active');
                
                // サイドバーのアクティブ状態を更新
                document.querySelectorAll('.sidebar-item').forEach(item => {
                    item.classList.remove('active');
                });
                homeLink.classList.add('active');
            });
            
            // プレイリストリンク
            playlistsLink.addEventListener('click', (e) => {
                e.preventDefault();
                if (videoCache[currentVideoId]) {
                    playVideo(currentVideoId);
                } else {
                    playVideo(sampleVideos[0].id);
                }
                
                // サイドバーのアクティブ状態を更新
                document.querySelectorAll('.sidebar-item').forEach(item => {
                    item.classList.remove('active');
                });
                playlistsLink.classList.add('active');
            });
            
            // 高評価した動画リンク
            likedVideosLink.addEventListener('click', (e) => {
                e.preventDefault();
                if (videoCache[currentVideoId]) {
                    playVideo(currentVideoId);
                } else {
                    playVideo(sampleVideos[0].id);
                }
                
                // プレイリストタブを「高評価した動画」に切り替え
                playlistTabs.forEach(tab => tab.classList.remove('active'));
                document.querySelector('[data-tab="liked"]').classList.add('active');
                
                document.querySelectorAll('.playlist-content').forEach(content => {
                    content.classList.remove('active');
                });
                likedVideosTab.classList.add('active');
                
                // サイドバーのアクティブ状態を更新
                document.querySelectorAll('.sidebar-item').forEach(item => {
                    item.classList.remove('active');
                });
                likedVideosLink.classList.add('active');
            });
            
            // 保存済み動画リンク
            savedVideosLink.addEventListener('click', (e) => {
                e.preventDefault();
                if (videoCache[currentVideoId]) {
                    playVideo(currentVideoId);
                } else {
                    playVideo(sampleVideos[0].id);
                }
                
                // サイドバーのアクティブ状態を更新
                document.querySelectorAll('.sidebar-item').forEach(item => {
                    item.classList.remove('active');
                });
                savedVideosLink.classList.add('active');
            });
            
            // ナビゲーションアイテム
            navItems.forEach(item => {
                item.addEventListener('click', () => {
                    navItems.forEach(i => i.classList.remove('active'));
                    item.classList.add('active');
                });
            });
            
            // プレイリストタブ
            playlistTabs.forEach(tab => {
                tab.addEventListener('click', () => {
                    const tabId = tab.getAttribute('data-tab');
                    
                    playlistTabs.forEach(t => t.classList.remove('active'));
                    tab.classList.add('active');
                    
                    document.querySelectorAll('.playlist-content').forEach(content => {
                        content.classList.remove('active');
                    });
                    
                    if (tabId === 'current') {
                        currentPlaylistTab.classList.add('active');
                    } else if (tabId === 'all') {
                        allPlaylistsTab.classList.add('active');
                    } else if (tabId === 'liked') {
                        likedVideosTab.classList.add('active');
                    }
                });
            });
            
            // 動画をプレイリストに追加
            addToCurrentPlaylistBtn.addEventListener('click', () => {
                const url = addVideoInput.value.trim();
                if (url) {
                    addToCurrentPlaylist(url);
                } else {
                    showNotification('YouTube動画URLを入力してください', 'error');
                }
            });
            
            addVideoInput.addEventListener('keypress', (e) => {
                if (e.key === 'Enter') {
                    const url = addVideoInput.value.trim();
                    if (url) {
                        addToCurrentPlaylist(url);
                    } else {
                        showNotification('YouTube動画URLを入力してください', 'error');
                    }
                }
            });
            
            // 新しいプレイリストを作成
            createPlaylistBtn.addEventListener('click', createNewPlaylist);
            createNewPlaylistBtn.addEventListener('click', createNewPlaylist);
            
            newPlaylistNameInput.addEventListener('keypress', (e) => {
                if (e.key === 'Enter') {
                    createNewPlaylist();
                }
            });
            
            // 高評価ボタン
            playerLikeButton.addEventListener('click', toggleLike);
            
            // 保存ボタン
            playerSaveButton.addEventListener('click', toggleSave);
            
            // 登録ボタン
            subscribeButton.addEventListener('click', toggleSubscribe);
            
            // 保存済み動画の更新ボタン
            refreshSavedVideosBtn.addEventListener('click', () => {
                renderSavedVideos();
                showNotification('保存済み動画を更新しました', 'info');
            });
            
            // すべての保存済み動画を削除
            clearAllSavedBtn.addEventListener('click', clearAllSavedVideos);
            
            // 詳細表示/非表示
            let isDescriptionExpanded = false;
            
            showMoreDescription.addEventListener('click', () => {
                const video = videoCache[currentVideoId];
                if (!video) return;
                
                const fullDescription = video.description;
                const shortDescription = fullDescription.split('\n')[0];
                const displayDescription = shortDescription.length > 100 ? shortDescription.substring(0, 100) + '...' : shortDescription;
                
                if (isDescriptionExpanded) {
                    playerVideoDescription.textContent = displayDescription;
                    showMoreDescription.textContent = fullDescription.length > 100 ? 'さらに表示' : '';
                } else {
                    playerVideoDescription.textContent = fullDescription;
                    showMoreDescription.textContent = '簡潔に表示';
                }
                isDescriptionExpanded = !isDescriptionExpanded;
            });
            
            // サイドバートグル
            sidebarToggle.addEventListener('click', () => {
                const sidebar = document.getElementById('sidebar');
                const mainContent = document.getElementById('main-content');
                
                if (sidebar.style.display === 'none') {
                    sidebar.style.display = 'block';
                    mainContent.style.marginLeft = '240px';
                } else {
                    sidebar.style.display = 'none';
                    mainContent.style.marginLeft = '0';
                }
            });
            
            // 動画追加の例を表示
            addVideoInput.addEventListener('focus', () => {
                const examples = [
                    'https://www.youtube.com/watch?v=dQw4w9WgXcQ',
                    'https://youtu.be/9bZkp7q19f0',
                    'https://www.youtube.com/embed/kJQP7kiw5Fk'
                ];
                
                if (!addVideoInput.value) {
                    addVideoInput.placeholder = `例: ${examples[Math.floor(Math.random() * examples.length)]}`;
                }
            });
            
            // 共有モーダル機能
            playerShareButton.addEventListener('click', openShareModal);
            
            closeShareModal.addEventListener('click', closeShareModalFunc);
            
            // モーダル外をクリックで閉じる
            shareModal.addEventListener('click', (e) => {
                if (e.target === shareModal) {
                    closeShareModalFunc();
                }
            });
            
            // リンクをコピー
            copyLinkButton.addEventListener('click', () => {
                copyToClipboard(copyLinkInput.value, 'link');
            });
            
            // リンク入力フィールドをクリックで選択
            copyLinkInput.addEventListener('click', function() {
                this.select();
            });
            
            // コピーオプションをクリック
            copyLinkOption.addEventListener('click', () => {
                copyToClipboard(copyLinkInput.value, 'link');
            });
            
            // 埋め込みオプションをクリック
            embedOption.addEventListener('click', () => {
                embedCodeContainer.classList.toggle('active');
                
                if (embedCodeContainer.classList.contains('active')) {
                    // 埋め込みコードを選択状態にする
                    setTimeout(() => {
                        const range = document.createRange();
                        range.selectNodeContents(embedCode);
                        const selection = window.getSelection();
                        selection.removeAllRanges();
                        selection.addRange(range);
                    }, 100);
                }
            });
            
            // 埋め込みコードをコピー
            copyEmbedButton.addEventListener('click', () => {
                copyToClipboard(embedCode.textContent, 'embed');
            });
            
            // Facebook共有
            facebookShare.addEventListener('click', shareOnFacebook);
            
            // Twitter共有
            twitterShare.addEventListener('click', shareOnTwitter);
            
            // 初期動画を再生
            const initialVideo = videoCache[currentVideoId] || sampleVideos[0];
            playVideo(initialVideo.id);
            
            // 使い方ガイドを表示（初回のみ）
            const hasSeenGuide = localStorage.getItem('youtubeGuideSeen');
            if (!hasSeenGuide) {
                setTimeout(() => {
                    showNotification('動画を保存すると右側に表示されます！', 'info');
                    localStorage.setItem('youtubeGuideSeen', 'true');
                }, 2000);
            }
        });
    </script>
</body>
</html>
